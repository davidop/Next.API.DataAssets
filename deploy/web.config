<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!--
    IIS Configuration for Next.API.DataAssets
    
    HOSTING MODELS:
    
    1. InProcess (RECOMMENDED for Windows Server 2019+):
       - Best performance (~30% faster than OutOfProcess)
       - Runs inside IIS worker process
       - Change hostingModel="inprocess" below
    
    2. OutOfProcess (RECOMMENDED for Windows Server 2012 R2):
       - Maximum compatibility
       - Runs as separate Kestrel process
       - Better isolation for debugging
       - Currently configured below
    
    REQUIREMENTS:
    - ASP.NET Core Runtime + Hosting Bundle installed
    - For net8.0: .NET 8.0 Hosting Bundle
    - For net10.0: .NET 10.0 Hosting Bundle (Windows Server 2016+ only)
    
    TROUBLESHOOTING:
    - Enable stdout logging: Set stdoutLogEnabled="true"
    - Logs location: .\logs\stdout_*.log
    - Check Event Viewer > Application logs for errors
  -->
  <system.webServer>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified"/>
    </handlers>
    
    <!-- 
      OPTION 1: OutOfProcess (Default - Maximum Compatibility)
      Recommended for Windows Server 2012 R2
    -->
    <aspNetCore processPath="dotnet" 
                arguments="Next.API.DataAssets.dll" 
                stdoutLogEnabled="false" 
                stdoutLogFile=".\logs\stdout" 
                hostingModel="outofprocess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        <!-- Optional: Override configuration via environment variables
        <environmentVariable name="Assets__RootPath" value="C:\Data\Assets" />
        <environmentVariable name="Auth__Jwt__SigningKey" value="YOUR_PRODUCTION_KEY" />
        -->
      </environmentVariables>
    </aspNetCore>
    
    <!--
      OPTION 2: InProcess (Recommended for Windows Server 2019+)
      Better performance, runs inside IIS process
      
      To use this option, comment out the OutOfProcess configuration above
      and uncomment the InProcess configuration below:
    
    <aspNetCore processPath="dotnet" 
                arguments="Next.API.DataAssets.dll" 
                stdoutLogEnabled="false" 
                stdoutLogFile=".\logs\stdout" 
                hostingModel="inprocess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
      </environmentVariables>
    </aspNetCore>
    -->
    
  </system.webServer>
</configuration>
